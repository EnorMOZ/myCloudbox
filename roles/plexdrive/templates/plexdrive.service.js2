# /etc/systemd/system/plexdrive.service

[Unit]
Description=Plexdrive
After=network-online.target

[Service]
User={{user}}
Group={{user}}
Type=simple
ExecStart={{mnt.docker_data}}/plexdrive/plexdrive mount -v 3 --refresh-interval=1m --chunk-check-threads=8 --chunk-load-threads=8 --chunk-load-ahead=4 --max-chunks=250 --fuse-options=allow_other,read_only --config={{mnt.docker_data}}/plexdrive --cache-file={{mnt.docker_data}}/plexdrive/cache.bolt {{mnt.plexdrive}}
ExecStop=/bin/fusermount -uz {{mnt.plexdrive}}
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target
